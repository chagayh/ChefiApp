<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.chefi.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.chefi.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.chefi.fragment.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.chefi.fragment.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_recipeFragment2"
            app:destination="@id/recipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.chefi.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/recipeFragment"
        android:name="com.example.chefi.fragment.RecipeFragment"
        android:label="fragment_recipe"
        tools:layout="@layout/fragment_recipe" >
        <argument
            android:name="imageUrlAsString"
            app:argType="string"
            android:defaultValue="default" />
        <argument
            android:name="databaseId"
            app:argType="string"
            android:defaultValue="default" />
        <argument
            android:name="currRecipeAsString"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/displayFragment"
        android:name="com.example.chefi.fragment.DisplayFragment"
        android:label="fragment_display"
        tools:layout="@layout/fragment_display" />
    <fragment
        android:id="@+id/followersFragment"
        android:name="com.example.chefi.fragment.FollowersFragment"
        android:label="fragment_follwers"
        tools:layout="@layout/fragment_follwers" >
        <argument
            android:name="followersOrFollowing"
            app:argType="boolean" />
    </fragment>
</navigation>