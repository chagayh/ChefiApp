<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/lightgrey"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/aboutMeDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circularbordersolid"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proximanovaregular"
                    android:text="Full Name"
                    android:textColor="@color/blue"
                    android:textSize="16sp"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proximanovaregular"
                android:text="Insert text here:"
                android:textSize="14sp"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/editTextFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="visible" />

            <TextView
                android:visibility="gone"
                android:id="@+id/uploadProfilePictureTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proximanovaregular"
                android:text="Upload Profile Picture"
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/uploadProfilePictureGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/follow_button_outline"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="10dp"
                    android:text="Upload Profile Picture"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />

                <Space
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="match_parent">
                </Space>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/uploadProfilePictureCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"

                    android:layout_weight="0.5"
                    android:fontFamily="@font/proximanovaregular"
                    android:textSize="14sp"
                    android:background="@drawable/follow_button_outline"
                    android:text="Camera"
                    android:textColor="@color/blue" />
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp">
            </Space>
        </LinearLayout>

    </LinearLayout>
    <Space
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutMeDialog"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="20dp">
    </Space>
</androidx.constraintlayout.widget.ConstraintLayout>